{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "**/elm-stuff/**",
      "**/src/**"
    ],
    "rewrites": [
      {
        "source": "/student",
        "destination": "/Student/student.html"
      },
      {
        "source": "/student/**",
        "destination": "/Student/student.html"
      },
      {
        "source": "/admin",
        "destination": "/Admin/admin.html"
      },
      {
        "source": "/admin/**",
        "destination": "/Admin/admin.html"
      }
    ],
    "headers": [
      {
        "source": "**/*.js",
        "headers": [
          {
            "key": "Content-Type",
            "value": "application/javascript"
          }
        ]
      },
      {
        "source": "**/*.css",
        "headers": [
          {
            "key": "Content-Type",
            "value": "text/css"
          }
        ]
      }
    ]
  }
}
